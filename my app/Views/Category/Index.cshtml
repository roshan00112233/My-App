@model List<Category>
<partial name="_Notification"></partial>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
    </div>
   <div class="col-6 text-end">
    <a asp-controller="Category" asp-action="Create" method="post" style="display:inline;">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </button>
    </a>
    


</div>


<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
  
    <tbody>

        @foreach (var obj in Model.OrderBy(u=>u.Displayorder))
        {
           <tr>
                <td>@obj.Name</td>
                <td>@obj.Displayorder</td>
                <td>
                    <div class="w-20 btn-group " role="group" >
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">
                           <i class="bi bi-pencil-square"> EDIT </i>
                           </a>
                    </div>
                        <div class="w-20 btn-group " role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"> DELETE </i>
                            </a>
                        </div>
                    </td>
                


                
           </tr>
          
        }
         </tbody>

</table>
</div>